#ifndef __system_call_h__
#define __system_call_h__

#ifdef __system_call_impl__
	#define __systemcall_api	__public
#else
	#define __systemcall_api	extern
#endif

#define systemcall_stdout	0x21
#define stdout_putchar		0x00
#define stdout_putstring	0x01
#define stdout_clear		0x02
#define stdout_cursor		0x03

__systemcall_api void systemcall_stdout_initialize();

#define systemcall_stdin	0x22

#define systemcall_process	0x23
#define process_yield		0x00
#define process_sleep		0x01
#define process_terminate	0x02

#endif
